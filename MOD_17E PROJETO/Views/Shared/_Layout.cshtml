@using MOD_17E_PROJETO.Helper;
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="navbar-brand">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Ervas do Fábio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse " id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item ">@Html.ActionLink("Sobre", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item ">@Html.ActionLink("Contato", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#" aria-expanded="false">Consultas</a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("Numero de serviços do Técnico","NST","Consultas", null, new { @class = "dropdown-item" })

                            </li>
                            <li>
                                @Html.ActionLink("Numero de serviços terminados por técnico","NSTT", "Consultas", null, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                    @if (Request.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">@Html.ActionLink("Utilizadores", "Index", "Tecnicos", null, new { @class = "nav-link" })</li>
                            <li class="nav-item ">@Html.ActionLink("Clientes", "Index", "Clientes", null, new { @class = "nav-link" })</li>
                            <li class="nav-item ">@Html.ActionLink("Serviços", "Index", "Servicoes", null, new { @class = "nav-link" })</li>
                        }
                        else if (User.IsInRole("Técnico"))
                        {
                            <li>@Html.ActionLink("Serviços", "Index", "Servicoes", null, new { @class = "nav-link" })</li>

                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#" aria-expanded="false">@Html.Raw("Olá " + User.Identity.Name)</a>
                            <ul class="dropdown-menu">
                                <li>
                                    @Html.ActionLink("Editar perfil", "Edit/" + @Html.UserId(User), "Tecnicos", null, new { @class = "dropdown-item" })

                                </li>
                                <li>
                                    @Html.ActionLink("Terminar sessão", "Logout", "Login", null, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>


                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meu Aplicativo ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
