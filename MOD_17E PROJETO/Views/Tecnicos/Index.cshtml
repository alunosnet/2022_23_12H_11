@model IEnumerable<MOD_17E_PROJETO.Models.Tecnico>

@{
    ViewBag.Title = "Index";
}

<br/><h2>Index</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<form method="post">
    Nome Técnico:<input type="text" name="tbPesquisa" class="form-control" />
