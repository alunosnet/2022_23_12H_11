            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perfil)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perfil)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdTecnico }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdTecnico }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.IdTecnico })
        </td>
    </tr>
}

</table>
